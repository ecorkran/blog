---
interface Props {
  title: string;
  subtitle: string;
  slug: string;
}

const { title, subtitle, slug } = Astro.props;
---

<article class="bento-item">
  <a href={`/blog/${slug}`} class="card-link">
    <div class="content">
      <h2>{title}</h2>
      <p>{subtitle}</p>
    </div>
  </a>
</article>

<style>
  article {
    position: relative;
    overflow: hidden;
    grid-column: span 2;
    grid-row: span 1;
    border-radius: 1.5rem;
    background: linear-gradient(135deg, rgba(60, 60, 70, 0.7), rgba(30, 30, 40, 0.7));
  }

  .content {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1.5rem;
    border-radius: 1.5rem;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .card-link {
    color: inherit;
    text-decoration: none;
    display: block;
    height: 100%;
    width: 100%;
    position: relative;
    border-radius: 1.5rem;
  }

  h2:hover {
    color: var(--accent-color);
  }

  p {
    margin: 0.5rem 0 0;
    line-height: 1.5;
    flex-grow: 1;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  article:hover {
    background: linear-gradient(135deg, rgba(70, 70, 80, 0.7), rgba(40, 40, 50, 0.7));
  }
</style>