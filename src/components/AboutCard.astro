---
import { getEntry } from 'astro:content';

// Get the about information from the intro collection
const aboutEntry = await getEntry('intro', 'about');
const { title, description } = aboutEntry.data;
const { Content } = await aboutEntry.render();
---

<article class="bento-item">
  <div class="content">
    <h2>{title}</h2>
    <p class="description">{description}</p>
    <div class="markdown-content">
      <Content />
    </div>
  </div>
</article>

<style>
  article {
    position: relative;
    overflow: hidden;
    grid-column: span 2;
    grid-row: span 3;
    padding: 0 !important;
    border-radius: 1.5rem;
    background: linear-gradient(to bottom, rgba(60, 60, 70, 0.7), rgba(30, 30, 40, 0.7));
  }

  .content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    border-radius: 1.5rem;
  }

  h2 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .description {
    margin: 0.5rem 0 0;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
    font-style: italic;
  }

  .markdown-content {
    margin-top: 1.5rem;
    color: white;
    flex-grow: 1;
  }

  .markdown-content :global(h3) {
    font-size: 1.25rem;
    margin-top: 0;
    margin-bottom: 0.5rem;
    color: white;
  }

  .markdown-content :global(p) {
    margin: 0.5rem 0 0;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  article:hover {
    background: linear-gradient(to bottom, rgba(70, 70, 80, 0.7), rgba(40, 40, 50, 0.7));
  }

  /* Adjust content layout for tall format */
  @media (min-width: 768px) {
    h2 {
      font-size: 1.75rem;
    }

    .description {
      font-size: 1.1rem;
      margin-top: 1rem;
    }
  }
</style>
