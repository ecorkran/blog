---
interface Props {
  title: string;
  description: string;
  image?: string;
  slug: string;
}

const { title, description, image, slug } = Astro.props;
---

<article class="bento-item">
  <div class="content">
    <h2><a href={`/blog/${slug}`}>{title}</a></h2>
    <p>{description}</p>
  </div>
  {image && <div class="image-overlay" style={`background-image: url(${image})`} />}
</article>

<style>
  article {
    position: relative;
    overflow: hidden;
    grid-column: span 2;
    grid-row: span 2;
    aspect-ratio: 1;
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;
    background-position: center;
    opacity: 0.15;
    transition: opacity 0.3s ease;
    z-index: 0;
  }

  article:hover .image-overlay {
    opacity: 0.25;
  }

  .content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    color: var(--accent-color);
  }

  p {
    margin: 0.5rem 0 0;
    line-height: 1.5;
    flex-grow: 1;
    opacity: 0.8;
  }
</style>