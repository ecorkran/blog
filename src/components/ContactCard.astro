---
import { getEntry } from 'astro:content';

// Get the contact information from the intro collection
const contactEntry = await getEntry('intro', 'contact');
const { title, description } = contactEntry.data;
const { Content } = await contactEntry.render();
---

<article class="bento-item">
  <div class="content">
    <h2>{title}</h2>
    <div class="markdown-content">
      <Content />
    </div>
  </div>
</article>

<style>
  article {
    position: relative;
    overflow: hidden;
    grid-column: span 2;
    grid-row: span 2;
    aspect-ratio: 1;
    padding: 0 !important;
    border-radius: 1.5rem;
    background: linear-gradient(135deg, rgba(124, 58, 237, 0.7), rgba(37, 99, 235, 0.7));
  }

  .content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    border-radius: 1.5rem;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
    margin-bottom: 1rem; /* Increased margin for better spacing */
  }

  .markdown-content {
    margin-top: 0; /* Adjusted since h2 now has bottom margin */
    color: white;
    flex-grow: 1;
  }

  .markdown-content :global(h1) {
    font-size: 1.5rem;
    margin-top: 0;
    margin-bottom: 1rem; /* Increased from 0.5rem */
    color: white;
  }

  .markdown-content :global(p) {
    margin: 0 0 1.25rem; /* Added bottom margin */
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }
  
  /* Remove bottom margin from last paragraph */
  .markdown-content :global(p:last-child) {
    margin-bottom: 0;
  }

  article:hover {
    background: linear-gradient(135deg, rgba(124, 58, 237, 0.8), rgba(37, 99, 235, 0.8));
  }
  
  @media (min-width: 768px) {
    h2 {
      font-size: 1.4rem;
      margin-bottom: 1.2rem;
    }
    
    .markdown-content :global(h1) {
      font-size: 1.7rem;
      margin-bottom: 1.2rem;
    }
    
    .markdown-content :global(p) {
      font-size: 1.05rem;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }
  }
</style>